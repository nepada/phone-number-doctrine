includes:
    - phar://phpstan.phar/vendor/phpstan/phpstan-mockery/extension.neon
    - phar://phpstan.phar/vendor/phpstan/phpstan-strict-rules/rules.neon

parameters:
    fileExtensions:
        - php
        - phpt

    autoload_directories:
        - %currentWorkingDirectory%/tests

    excludes_analyse:
        - %currentWorkingDirectory%/tests/bootstrap.php
        - %currentWorkingDirectory%/tests/temp/*

    ignoreErrors:
        - '#Parameter \#2 \$className of static method Doctrine\\DBAL\\Types\\Type::overrideType\(\) expects string, null given#' # intended test behavior
        - '#Call to an undefined method Mockery\\CompositeExpectation::with\(\)#' # false positive
